#tasks-page
  %h1 Listing tasks

  #task-creation-form
    = form_for @task, :url => { :action => "create" }, :remote => true do |f|
      = f.text_field :content, :id => "content-field"
      = f.submit "Save"

  %ul#tasks
    - @tasks.each do |task|
      %li{:id => "task#{task.id}"}
        = check_box_tag(:complete, "completed")
        %span.content= task.content
        = @task.user_id
        = link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
      -#%td= task.created_at
